<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.skyarrow.ehreader">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".app.entry.EntryActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".app.gallery.GalleryActivity"
            android:parentActivityName=".app.entry.EntryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Gallery">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.entry.EntryActivity"/>
        </activity>

        <activity android:name=".app.photo.PhotoActivity"
            android:parentActivityName=".app.gallery.GalleryActivity"
            android:theme="@style/AppTheme.Photo"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.gallery.GalleryActivity"/>
        </activity>

        <activity android:name=".app.pref.PrefActivity"
            android:parentActivityName=".app.entry.EntryActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.entry.EntryActivity"/>
        </activity>

        <activity android:name=".app.comment.CommentActivity"
            android:parentActivityName=".app.gallery.GalleryActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.gallery.GalleryActivity"/>
        </activity>

        <activity android:name=".app.search.SearchActivity"
            android:parentActivityName=".app.entry.EntryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Search"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.entry.EntryActivity"/>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity android:name=".app.login.LoginActivity"
            android:parentActivityName=".app.entry.EntryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.entry.EntryActivity"/>
        </activity>

        <service android:name=".service.PhotoFetchService"/>

        <service android:name=".service.GalleryDownloadService"/>
        
        <service android:name=".auth.AuthenticatorService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator"/>
        </service>

        <receiver android:name=".receiver.NetworkStateReceiver"/>

        <provider
            android:name=".provider.SearchSuggestionProvider"
            android:authorities="${applicationId}.provider.SearchSuggestionProvider"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="6a709f4dfa8b2c5ca5aae34378af9b1a5c4564f6" />
        <activity
            android:name="com.mopub.mobileads.MoPubActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.mopub.mobileads.MraidActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.mopub.common.MoPubBrowser"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.mopub.mobileads.MraidVideoPlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>
</manifest>
